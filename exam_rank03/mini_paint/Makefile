NAME= mini_paint
CFLAGS= -Wall -Wextra -Werror
RM= rm -rf
LDLIBS= -lm

all: ${NAME}

${NAME}: ${SRCS}

fclean:
	${RM} ${NAME}

re: fclean all

.phony: all fclean re
